alias dc=docker-compose
alias edit='nano'

# Dot files
alias ez='edit ~/.dotfiles/zshrc'
alias ea='edit ~/.dotfiles/zsh/aliases'
alias ep='edit ~/.dotfiles/zsh/path'
alias shell='source ~/.zshrc'
alias dfu='cd ~/.dotfiles && git pull && chmod -R +x ~/.dotfiles'

alias home='cd ~/'

# Get usertype
USERTYPE_FILE=$HOME/.dotfiles/usertype.sh
if [ -f $USERTYPE_FILE ]; then
    . $USERTYPE_FILE
fi

if [ "$USERTYPE" = "webserver" ]; then
    alias wp-install='sudo ~/.dotfiles/scripts/webserver/wp-install.sh'
    alias wp-update-salts='sudo ~/.dotfiles/scripts/webserver/wp-update-salts.sh'
    alias nginx-update='sudo ~/.dotfiles/scripts/webserver/nginx-update.sh'
    alias nginx-add-block='sudo ~/.dotfiles/scripts/webserver/nginx-add-block.sh'
    alias php-update-overrides='sudo ~/.dotfiles/scripts/webserver/php-update-overrides.sh'
    alias db-update='sudo ~/.dotfiles/scripts/webserver/mariadb-client.sh'
fi

if [ "$USERTYPE" = "database-server" ]; then
    alias ssl-update='sudo ~/.dotfiles/scripts/database/server-ssl-generate.sh'
    alias ssl-copy='sudo ~/.dotfiles/scripts/database/ssl-copy.sh'
    alias db-update='sudo ~/.dotfiles/scripts/database/mariadb-server.sh'
fi

if cmd_exists brew; then
    alias b=brew
fi

# ls tings
if cmd_exists colorls; then
    alias ls='colorls'
elif cmd_exists gls; then
    alias ls='gls -GpF --color=auto'
else
    alias ls='ls -GpF'
fi
alias la='ls -A'
alias ll='ls -l'
alias lala='ls -la'
alias l='ls'

alias getip="curl icanhazip.com"

alias apt='sudo apt'
